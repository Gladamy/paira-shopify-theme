<div class="product-page">
  <div class="product-gallery">
    {% for image in product.images %}
      <img src="{{ image | img_url: 'large' }}" alt="{{ product.title }}">
    {% endfor %}
  </div>
  <div class="product-details">
    <h1>{{ product.title }}</h1>
    <div class="price">{{ product.price | money }}</div>
    <ul class="benefits">
      <li>{{ section.settings.benefit1 }}</li>
      <li>{{ section.settings.benefit2 }}</li>
      <li>{{ section.settings.benefit3 }}</li>
    </ul>
    {% form 'product', product %}
      <select name="id">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}">{{ variant.title }}</option>
        {% endfor %}
      </select>
      <button type="submit">Add to Cart</button>
    {% endform %}
    {% include 'paira-upsell' %}
    <div class="description">{{ product.description }}</div>
    <div class="reviews">Reviews placeholder</div>
  </div>
</div>

{% schema %}
{
  "name": "Main Product",
  "settings": [
    {
      "type": "text",
      "id": "benefit1",
      "label": "Benefit 1"
    },
    {
      "type": "text",
      "id": "benefit2",
      "label": "Benefit 2"
    },
    {
      "type": "text",
      "id": "benefit3",
      "label": "Benefit 3"
    }
  ]
}
{% endschema %}