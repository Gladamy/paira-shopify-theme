<div class="split">
  <div class="split-image">
    <img src="{{ section.settings.image | img_url: 'large' }}" alt="">
  </div>
  <div class="split-content">
    <h2>{{ section.settings.headline }}</h2>
    <p>{{ section.settings.text }}</p>
    <a href="{{ section.settings.cta_link }}" class="btn">{{ section.settings.cta_text }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Split",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    }
  ]
}
{% endschema %}